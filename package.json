{
  "name": "surreal-better-auth-monorepo",
  "devDependencies": {
    "@better-auth/cli": "^1.3.7",
    "glob": "^11.0.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "private": true,
  "scripts": {
    "build": "bun run --filter=surreal-better-auth build",
    "dev": "bun run --port 3000 --filter=sk --elide-lines=0 dev",
    "test:adapter": "vitest run packages/surreal-better-auth/tests/",
    "test:integration": "cd examples/sk && bunx playwright test",
    "test:all": "bun run test:adapter && bun run test:integration",
    "release:check": "cd packages/surreal-better-auth && npm pack --dry-run",
    "release:version": "cd packages/surreal-better-auth && node -p \"require('./package.json').version\"",
    "release:status": "node scripts/check-release.js",
    "setup": "bun install && echo 'âœ… Setup complete! Run: bun run release:status'",
    "create:schema": "cd examples/sk &&  bun run create:schema"
  },
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}